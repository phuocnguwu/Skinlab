<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Forum_Detailed">
        <ImageView
            android:id="@+id/btnclickback"
            android:layout_width="44dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:src="@drawable/back"
            android:background="@drawable/backgroundbuttonback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewTieude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Forum"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textviewTieude">
        
                <ImageView
                    android:id="@+id/imvAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_launcher_background" />
        
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="6">
        
                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenny Wilson"
                        android:textSize="16sp"/>
        
                    <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 sep, 2023"
                        android:textSize="16sp"/>
                </LinearLayout>
        
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="16sp"
                    android:layout_weight=".5"/>
        
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:src="@drawable/star"
                    android:layout_weight=".5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llInfo">
            <TextView
                android:id="@+id/txtReviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forum"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight=".5"/>

            <TextView
                android:id="@+id/txtContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginTop="15dp"
                android:text="Mỹ phẩm ngày nay có tác động tích cực
            đến hành vi của khách hàng và trong đó sản phẩm thuần chay,.."
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imvContentImg"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background"
                android:layout_weight="2.5"/>

            <TextView
                android:id="@+id/textviewbinhluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Bình luận"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight=".5"/>
            <TextView
                android:id="@+id/txtCommentName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Thảo Nhi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight=".5"/>
            <TextView
                android:id="@+id/txtCommentContent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tui ưng cái bài review này ghê, có tâm và có tầm"
                android:textSize="16sp"
                android:layout_weight=".5"/>
            <TextView
                android:id="@+id/txtCommentName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ngọc Vy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/txtCommentContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tui ưng cái bài review này ghê, có tâm và có tầm"
                android:textSize="16sp"
                android:layout_weight="0.5"/>

        </LinearLayout>


    
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>